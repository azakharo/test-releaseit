{
  "pkgFiles": [
    "package.json",
    "package-lock.json"
  ],
  "scripts": {
    "beforeStart": "npm test",
    "afterBump": "npm run build",
    "changelog": "npx conventional-changelog",
    "beforeStage": "tar -czvf c2-ui-${version}.tar.gz build && npx conventional-changelog -i CHANGELOG.md -s"
  },
  "git": {
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "assets": ["*.tar.gz"]
  }
}
